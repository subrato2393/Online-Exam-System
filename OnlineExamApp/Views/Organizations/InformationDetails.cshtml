
@model OnlineExams.Models.Organization

@{
    /**/
    ViewBag.Title = "Details";

}

<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css" rel="stylesheet"/>
    @*<script src="~/Scripts/jquery-3.3.1.js"></script>*@
</head>

<body>


    <div class="container">
        <div class="row">
            <div class="col-md-6">
                @*@Model.Logo*@
                <p style="margin-top: 5px; padding-bottom: 10px;"><img src="@Url.Content(Model.ImagePath)" width="200" height="180" multiple /></p>

            </div>
            <div class="col-md-6" style="padding-top: 50px;">
                @*@Model.About*@


                <h1 class="text-center">@Html.DisplayFor(model => model.Org_Name)</h1>
                <p class="text-center">@Html.DisplayFor(model => model.About)</p>

            </div>
            <div class="row">
                <div class="col-md-12">
                    <table id="org_info_table" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Code</th>
                                <th>About</th>
                                <th>Trainer</th>
                                <th>Participant</th>
                                <th>View</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var check in Model.Courses)
                            {
                                <tr>
                                    <td>@check.Name</td>
                                    <td>@check.CourseCode</td>
                                    <td>@check.CourseOutLine</td>
                                    <td class="text-center">@Model.Trainers.Count</td>
                                    <td>under construction!</td>
                                    <td>under construction!</td>
                                    <td>under construction!</td>
                                    <td>under construction!</td>


                                </tr>


                            }


                        </tbody>
                    </table>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-md-12">

                        <h3 class="text-center">ADDRESS:</h3>
                        <p class="text-center">@Html.DisplayFor(model => model.Address)</p>

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <h3 class="text-center">Contact:</h3>
                        <p class="text-center">@Html.DisplayFor(model => model.ContactNo)</p>


                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.ActionLink("Index", "SearchOrganization")
</body>
</html>
@section scripts{

    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src=" https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#org_info_table').DataTable();
        });


    </script>

}
