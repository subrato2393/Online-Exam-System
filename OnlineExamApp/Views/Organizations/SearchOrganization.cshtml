@model IEnumerable<OnlineExams.Models.Organization>

@{
    ViewBag.Title = "SearchOrganization";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Search Organization</h3>
<br />
<form method="post">

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.Label("Name", htmlAttributes: new {@class = "control-label "})
                    @Html.Editor("Name", new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessage("Name", "", new {@class = "text-danger"})
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.Label("Address", htmlAttributes: new {@class = "control-label "})
                    @Html.Editor("Address", new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessage("Address", "", new {@class = "text-danger"})
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.Label("Code", htmlAttributes: new { @class = "control-label " })
                    @Html.Editor("Code", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessage("Org_Code", "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.Label("Contact", htmlAttributes: new { @class = "control-label " })
                    @Html.Editor("Contact", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessage("Contact", "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-offset-8 col-md-12">
                <div class="form-group">
                    <input type="submit" value="Search" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
  

</form>
<br />
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Org_Name)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactNo)
        </th>
        <th>
            @Html.DisplayName("Courses")
        </th>
        <th>
            @Html.DisplayName("Action")
        </th>
     
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Org_Name)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Courses.Count)
            </td>

          
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }


</table>

